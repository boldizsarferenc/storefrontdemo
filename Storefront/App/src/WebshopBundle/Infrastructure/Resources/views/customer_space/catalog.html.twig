{% extends '@webshop/base.html.twig' %}

{% block title %}Product Catalog{% endblock %}

{% block stylesheets %}
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .button {
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            background-color: #4CAF50;
        }
    </style>
{% endblock %}

{% block body %}
    <table>
        <table>
            <tr>
                <th>sku</th>
                <th>Name</th>
                <th>Description</th>
                <th>Net Price</th>
                <th>Gross Price</th>
            </tr>
            {% for product in products %}
                <tr>
                    <td>{{ product.sku }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.netPrice }}</td>
                    <td>{{ product.grossPrice }}</td>
                    <td><button class="button">Kos√°rba</button></td>
                </tr>
            {% endfor %}
    </table>
{% endblock %}