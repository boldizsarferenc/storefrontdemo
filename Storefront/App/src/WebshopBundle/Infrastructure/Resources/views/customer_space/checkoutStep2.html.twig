{% extends '@webshop/base.html.twig' %}

{% block title %}Product Catalog{% endblock %}

{% block stylesheets %}
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }

        .button {
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            background-color: #4CAF50;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="header">
        <a href="{{ path('app_customer_space') }}">Back to catalog</a>
    </div>

    <form action="{{ path('addShippingMethod') }}" method="post">
        <h2>Shipping methods</h2>
        {% for shippingMethod in shippingMethods %}
            <label><input type="radio" name="shippingMethodId" value="{{ shippingMethod.id }}"> {{ shippingMethod.name }}<br><small>{{ shippingMethod.description }}</small></label>
        {% endfor %}
        <br>

        <input type="submit" value="Submit">
    </form>

{% endblock %}
