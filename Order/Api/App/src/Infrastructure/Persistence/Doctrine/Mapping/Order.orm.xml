<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Order" table="orders">
        <id name="id" type="string" column="id" unique="true"/>
        <embedded name="customer" class="App\Domain\Customer" />
        <embedded name="shippingAddress" class="App\Domain\ShippingAddress" />
        <embedded name="shippingMethod" class="App\Domain\ShippingMethod" />
        <embedded name="billingAddress" class="App\Domain\BillingAddress" />
        <embedded name="billingMethod" class="App\Domain\BillingMethod" />
        <one-to-many field="products" target-entity="App\Domain\Product" mapped-by="order">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>
    </entity>

</doctrine-mapping>
